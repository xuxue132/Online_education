  <select id="AllHonorSum" resultType="java.lang.Integer" parameterType="map" >
    select
    COUNT(*)
    from honor
    where deletes = 0
  </select>


  <select id="SelectHonor" resultMap="BaseResultMap" parameterType="map">
    select
    <include refid="Base_Column_List" />
    from honor
    where deletes = 0
    order by dates DESC
    limit #{NowPage,jdbcType=INTEGER},10
  </select>

  <select id="SelectAnHonor" resultMap="BaseResultMap" parameterType="map">
    select
    <include refid="Base_Column_List" />
    from honor
    where deletes = 0 and id = #{id,jdbcType=INTEGER}
  </select>


  <select id="selectHonor" resultMap="BaseResultMap" parameterType="map">
    select
    <include refid="Base_Column_List" />
    from honor
    where  deletes = 0 and
    (
    title LIKE #{title,jdbcType=VARCHAR}
    )
    order by dates DESC
  </select>

  <insert id="Add" parameterType="map" >
    insert into honor (title, dates,
      texts
      )
    values ( #{title,jdbcType=VARCHAR}, #{dates,jdbcType=TIMESTAMP},
      #{texts,jdbcType=LONGVARCHAR}
      )
  </insert>

  <update id="ChangeHonor" parameterType="map" >
    update honor
    set
      title = #{title,jdbcType=VARCHAR},
      texts = #{texts,jdbcType=LONGVARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>

  <update id="HonorUpload" parameterType="map">
    update honor
    set
      images = #{images,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>


  <update id="DeleteHonor" parameterType="map" >
    update honor
    set
      deletes = 1
    where id = #{id,jdbcType=INTEGER}
  </update>
